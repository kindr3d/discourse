<div class='topics-stats-title'>
  <h1>{{stats.topic_title}}</h1>
</div>

{{stats-arrows total=stats.topic_total}}

<div class='topics-stats-time'>
  <p>{{stats.time}}</p>
</div>

<div class="forD3-topics"></div>


<ul class="topics-categories">
  {{#each cats as |cat|}}
  <li>
    <a class="badge-wrapper bullet" href={{cat.url}}>
      <span class="badge-category-bg" style={{cat.style}}></span>
      <span class="badge-category clear-badge">{{cat.name}}
      </span>
    </a>
  </li>
  {{/each}}
</ul>
